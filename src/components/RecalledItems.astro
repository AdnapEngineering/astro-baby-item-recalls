---
// @TODO: Get data from api https://www.cpsc.gov/Recalls/CPSC-Recalls-Application-Program-Interface-API-Information
const recalledItems = [
  {
    id: 'crib-001',
    name: 'SleepyTime Drop-Side Crib',
    reason: 'Detachment hazard with the drop-side rail.',
    recallDate: '2025-06-15',
    link: 'https://www.cpsc.gov/Recalls'
  },
  {
    id: 'chair-002',
    name: 'Happy Eater High Chair',
    reason: 'Restraint straps can loosen, posing a fall risk.',
    recallDate: '2025-05-20',
    link: 'https://www.cpsc.gov/Recalls'
  },
  {
    id: 'monitor-003',
    name: 'Watchful-Eye Baby Monitor',
    reason: 'Overheating issue with the power adapter.',
    recallDate: '2025-07-02',
    link: 'https://www.cpsc.gov/Recalls'
  }
];
---

<div class="max-w-3xl mx-auto p-4 bg-primary/10 border border-primary rounded-lg">
  <h2 class="text-xl font-bold text-primary border-b border-primary/30 pb-2 mb-4">
    Recent Baby Product Recalls
  </h2>
  <p class="mb-6 text-base-content/80">
    Please check your items against this list for your child's safety.
  </p>

  <div class="grid gap-4">
    {recalledItems.map(item => (
      <div class="card border-l-4 border-primary bg-base-100 shadow-md" id={item.id}>
        <div class="card-body">
          <h3 class="card-title">{item.name}</h3>
          <p><span class="font-semibold">Reason for Recall:</span> {item.reason}</p>
          <p><span class="font-semibold">Recall Date:</span> {new Date(item.recallDate).toLocaleDateString()}</p>
          <div class="card-actions justify-end">
            <a
              href={item.link}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-sm btn-primary text-primary-content"
            >
              Official Notice â†’
            </a>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
